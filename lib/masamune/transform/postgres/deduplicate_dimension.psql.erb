WITH consolidated AS (
  SELECT
    <%- target.insert_view_values(coalesce: true).each do |value| -%>
    <%= value %><%= ',' %>
    <%- end -%>
    start_at,
    date_trunc('hour',start_at) as dimension_grain
  FROM
    <%= source.name %>
)
INSERT INTO
  <%= target.name %> (<%= target.insert_columns.join(', ') %>, start_at)
SELECT DISTINCT
  <%- target.insert_view_values.each do |value| -%>
  <%= value %><%= ',' %>
  <%- end -%>
  start_at
FROM (
  SELECT
    <%- target.insert_view_values.each do |value| -%>
    <%= value %><%= ',' %>
    <%- end -%>
    dimension_grain as start_at,
    CASE
    WHEN <%= target.duplicate_value_conditions('w',).join(' AND ') %>  THEN
      1
    ELSE
      0
    END AS duplicate
  FROM
    consolidated
  WINDOW w AS (PARTITION BY <%= target.window.join(', ') %> ORDER BY start_at desc)
) tmp
WHERE
  duplicate = 0
;
